<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/itemShopListFragment">

    <fragment
        android:id="@+id/itemShopListFragment"
        android:name="com.example.lista_compras_crud.ui.item_shop_list.ItemShopListFragment"
        android:label="@string/item_shop_list"
        tools:layout="@layout/item_shop_list_fragment" >
        <action
            android:id="@+id/action_itemShopListFragment_to_cadastroFragment"
            app:destination="@id/cadastroFragment" />
    </fragment>

    <fragment
        android:id="@+id/cadastroFragment"
        android:name="com.example.lista_compras_crud.ui.item_shop.CadastroFragment"
        android:label="@string/item_shop_add"
        tools:layout="@layout/cadastro_fragment" >
        <argument
            android:name="shop_item"
            app:argType="com.example.lista_compras_crud.data.db.entity.ItemShopEntity"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

</navigation>